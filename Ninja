-- Ninja Animation Script (Improved for reliability)

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Function to apply Ninja animation
local function applyNinjaAnimation(char)
    local humanoid = char:FindFirstChild("Humanoid")
    if not humanoid then return end
    
    local animate = char:FindFirstChild("Animate")
    if not animate then return end
    
    -- Disable Animate script to allow changes
    animate.Disabled = true
    
    -- Stop any playing animations
    for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
        track:Stop()
    end
    
    -- Set Ninja animation IDs
    animate.idle.Animation1.AnimationId = "rbxassetid://656117400"
    animate.idle.Animation2.AnimationId = "rbxassetid://656118341"
    animate.walk.WalkAnim.AnimationId = "rbxassetid://656121766"
    animate.run.RunAnim.AnimationId = "rbxassetid://656118852"
    animate.jump.JumpAnim.AnimationId = "rbxassetid://656117878"
    animate.climb.ClimbAnim.AnimationId = "rbxassetid://656114359"
    animate.fall.FallAnim.AnimationId = "rbxassetid://656115606"
    
    -- Re-enable Animate script
    animate.Disabled = false
    
    -- Force reload
    humanoid:ChangeState(Enum.HumanoidStateType.Running)
    print("Ninja animation applied successfully!")
end

-- Apply on current character
if player.Character then
    applyNinjaAnimation(player.Character)
end

-- Apply on every respawn
player.CharacterAdded:Connect(applyNinjaAnimation)
